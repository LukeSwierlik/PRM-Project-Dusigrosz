<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.CardViewActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/USER_CARD_VIEW"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/PHONE_NUMBER_TEXT_VIEW_CARD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:drawableTint="#4CAF50"
                android:text="@string/phone_number"
                android:textColor="#4CAF50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/FIRST_NAME_TEXT_VIEW_CARD" />

            <TextView
                android:id="@+id/DEBT_TEXT_VIEW_CARD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/valuepln"
                android:textColor="#E91E63"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/SYMBOL_PLN"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/FIRST_NAME_TEXT_VIEW_CARD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/first_name"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/I_User"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/LAST_NAME_TEXT_VIEW_CARD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/last_name"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/FIRST_NAME_TEXT_VIEW_CARD"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/SYMBOL_PLN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/pln"
                android:textColor="#E91E63"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/I_User"
                android:layout_width="21dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:foreground="@drawable/custom_ic_person"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>